<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"***REMOVED***

	<!-- HANDLER MAPPING RULES --***REMOVED***
	
	<!-- Maps requests to @Controllers based on @RequestMapping("path") annotation values
		 If no annotation-based path mapping is found, Spring MVC proceeds to the next HandlerMapping (order=2 below). --***REMOVED***
	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping"***REMOVED***
		<property name="order" value="1" /***REMOVED***
	</bean***REMOVED***
	
	<!-- Maps requests to @Controllers based on controller class name convention; e.g. a request for /hotels or a /hotels sub-resource maps to HotelsController
	     If no class mapping is found, Spring MVC sends a 404 response and logs a pageNotFound warning. --***REMOVED***
	<bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"***REMOVED***
		<property name="order" value="2" /***REMOVED***
	</bean***REMOVED***

	<!-- REGISTERED HANDLER TYPES --***REMOVED***

	<!-- Enables annotated @Controllers; responsible for invoking an annotated POJO @Controller when one is mapped. --***REMOVED***
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter" /***REMOVED***

	<!--  VIEW RESOLUTION AND RENDERING --***REMOVED***
	
	<!-- Resolves view names to protected .jsp resources within the /WEB-INF directory --***REMOVED***
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"***REMOVED***
		<property name="prefix" value="/WEB-INF/"/***REMOVED***
		<property name="suffix" value=".jsp"/***REMOVED***
	</bean***REMOVED***
	
</beans***REMOVED***
