<?xml version="1.0" encoding="UTF-8"?***REMOVED***
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:p="http://www.springframework.org/schema/p"
		xmlns:context="http://www.springframework.org/schema/context" 
		xmlns:jdbc="http://www.springframework.org/schema/jdbc"
		xmlns:tx="http://www.springframework.org/schema/tx"
		xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
			http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
			http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd"***REMOVED***

	<context:property-placeholder location="classpath:/jdbc.properties" /***REMOVED***

	<tx:annotation-driven /***REMOVED***

	<!-- DataSource configuration for Apache Commons DBCP. --***REMOVED***
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close"
			p:driverClassName="${jdbc.driverClassName***REMOVED***" p:url="${jdbc.url***REMOVED***"
			p:username="${jdbc.username***REMOVED***" p:password="${jdbc.password***REMOVED***"/***REMOVED***
	
	<!-- Database initializer. If any of the script fails, the initialization stops. --***REMOVED***
	<!-- As an alternative, for embedded databases see <jdbc:embedded-database/***REMOVED***. --***REMOVED***
	<jdbc:initialize-database data-source="dataSource"***REMOVED***
		<jdbc:script location="${jdbc.initLocation***REMOVED***"/***REMOVED***
		<jdbc:script location="${jdbc.dataLocation***REMOVED***"/***REMOVED***
	</jdbc:initialize-database***REMOVED***
	
	<!-- Note: the specific "jpaAdapter" bean sits in adapter context file --***REMOVED***
	<bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
		p:dataSource-ref="dataSource" p:jpaVendorAdapter-ref="jpaAdapter"***REMOVED***
		<property name="loadTimeWeaver"***REMOVED***
			<bean class="org.springframework.instrument.classloading.InstrumentationLoadTimeWeaver" /***REMOVED***
		</property***REMOVED***
		<property name="persistenceXmlLocation" value="classpath:META-INF/jpa-persistence.xml"/***REMOVED***		
	</bean***REMOVED***

	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager"
		p:entityManagerFactory-ref="entityManagerFactory" /***REMOVED***

</beans***REMOVED***
